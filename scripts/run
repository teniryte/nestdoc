#!/usr/bin/env bash

ROOT=$PWD
echo "ROOT: $PWD"
BIN_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &>/dev/null && pwd)
echo "BIN_DIR: $BIN_DIR"
BIN_FILE=$(realpath "$BIN_DIR/nestdoc")
echo "BIN_FILE: $BIN_FILE"
SCRIPTS_DIR=$(dirname "$BIN_FILE")
PACKAGE_DIR=$(dirname "$SCRIPTS_DIR")
echo "PACKAGE_DIR: $PACKAGE_DIR"

nodemon --exec "bash" "$PACKAGE_DIR/scripts/build" --watch "$PACKAGE_DIR/src/*" --watch "$ROOT/src/*" -e js,pug,ts,css,styl,png
