$menu-margin = 20px;

menuItem()
  font-weight: 500;
  display flex
  align-items: center;
  margin-bottom: $menu-margin;

  i
    color: #B0BEC5;
    width: 1.2em;

  strong
    color: #607D8B;
    margin-left: 5px;
    font-weight: 500;

  &:hover
    i, strong
      color: materialOrange(700) !important;

.main-menu
  width: 370px;

  &[data-filtering="filtering"]
    .main-menu-section
      &__items
        display: block !important;

  &-module
    // background: lighten(materialBlueGrey(50), 95%);
    background: #fff;
    padding: 20px;
    border-radius: 4px;
    margin-bottom: 10px;
    // border: 1px solid lighten(#CFD8DC, 50%);

    &__name
      menuItem();

      text-transform: uppercase;
      font-weight: 800 !important;

    // &__items
    //   display: none;

  &-section
    margin-left: $menu-margin;
    margin-bottom: $menu-margin;

    &__title
      menuItem();

      font-size: 0.9em;

      em
        font-style: normal;
        margin-left: 10px;
        // opacity: 0.7;
        color: #B0BEC5;

    &[data-expanded="expanded"]
      .main-menu-section__items
        display: block;

    &__items
      margin-left: $menu-margin;
      border-left: 1px dotted #CFD8DC;
      padding-left: $menu-margin;
      display: none;

      &__item
        menuItem();

        font-size: 0.9em;
        margin-bottom: 10px;

        &[data-active="active"]
          i, strong
            color: #F57C00;

  &-search
    position: relative;

    input
      font-size: 1.1em;
      background: #fff;
      border: none;
      padding: 15px 20px;
      border-radius: 4px;
      margin-bottom: 10px;
      display: block;
      width: 100%;

    &__icon
      position: absolute;
      top: 15px;
      right: 15px;
      color: #CFD8DC;
      font-size: 1.2em;

.main-menu-article
  background: rgba(0, 0, 0, 0.03);
  padding: 20px;
  border-radius: 4px;
  margin-bottom: 20px;
  // border: 1px solid rgba(0, 0, 0, 0.06);

  &__header
    font-size: 1.2em;
    color: #546E7A;
    display: flex;
    font-weight: 500;
    margin-bottom: 20px;

    i
      margin-right: 5px;

    a
      color: #546E7A;

.main-menu-links

  a
    display: flex;
    color: #607D8B;
    margin-bottom: 20px;

    i
      margin-right: 5px;
