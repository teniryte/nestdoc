.header
  display: flex;
  align-items: center;
  margin-top: 30px;
  background: rgba(#ECEFF1, 50%);
  border-radius: 5px;
  padding: 20px 25px;
  color: #455A64;

  .icon
    color: #B0BEC5;
    font-size: 2em;

  .details
    margin-left: 20px;

    .title
      font-size: 1.4em;
      display: flex;
      align-items: center;
      margin-bottom: 5px;

      span
        margin-right: 7px;

      strong
        font-weight: 500;

    .subtitle
      font-size: 1.1em;
